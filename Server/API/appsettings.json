{
  "Frontend": {
    "BaseUrl": "https://www.example.com"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-server;Database=SaintsAndMiracles;User Id=PROD_USER;Password=PROD_PASSWORD;"
  },

  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "User": "SaintsAndMiracles",
    "Pass": "PROD_SMTP_PASSWORD",
    "From": "saintsandmiracles@gmail.com"
  },

  "Bootstrap": {
    "Enabled": false,
    "TokenTtlHours": 1,
    "LogPlainTokenToPersistentLogs": false,
    "WritePlainTokenToConsole": false
  },

  "AllowedHosts": "*",

  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],

    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Pomelo": "Warning",
        "System": "Warning"
      }
    },

    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],

    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "flushToDiskInterval": "00:00:01",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {Properties}{NewLine}{Exception}"
        }
      }
    ]
  }
}
