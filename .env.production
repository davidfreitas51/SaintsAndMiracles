# Production Environment

# App
export ASPNETCORE_ENVIRONMENT=Production
export Frontend__BaseUrl=https://your-domain.com

# Database container
export MYSQL_CONTAINER_NAME=saints-mysql-prod
export MYSQL_DATABASE=saintsdb
export MYSQL_USER=saintsuser
export MYSQL_PASSWORD="CHANGE_ME_STRONG_DB_PASSWORD"
export MYSQL_ROOT_PASSWORD="CHANGE_ME_STRONG_DB_ROOT_PASSWORD"

# Connection string must use mysql service host inside Docker network
export ConnectionStrings__DefaultConnection="Server=mysql;Port=3306;Database=saintsdb;User=saintsuser;Password=CHANGE_ME_STRONG_DB_PASSWORD;SslMode=Preferred;"

# SMTP (use production email and app password)
export Smtp__Host=smtp.gmail.com
export Smtp__Port=587
export Smtp__User="CHANGE_ME_PRODUCTION_EMAIL@gmail.com"
export Smtp__Pass="CHANGE_ME_PRODUCTION_APP_PASSWORD"
export Smtp__From="CHANGE_ME_PRODUCTION_EMAIL@gmail.com"
export Smtp__FromName="Saints & Miracles"

# Bootstrap seed behavior (disabled in production)
export Bootstrap__Enabled=false
export Bootstrap__TokenTtlHours=1
export Bootstrap__LogPlainTokenToPersistentLogs=false
export Bootstrap__WritePlainTokenToConsole=false

